{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    // "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2015", "ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["*.ts", "*.d.ts", "*.tsx", "*.vue"],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
