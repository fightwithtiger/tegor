{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM"],
    "skipLibCheck": true
  },
  "include": ["*.ts", "*.d.ts", "*.tsx", "*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
